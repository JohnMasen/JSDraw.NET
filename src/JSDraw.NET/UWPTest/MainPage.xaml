<Page
    x:Class="UWPTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="309*"/>
            <RowDefinition Height="691*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        
        <Button Content="Button" Grid.ColumnSpan="1" HorizontalAlignment="Stretch"  Grid.RowSpan="1" VerticalAlignment="Stretch" Click="Button_Click"/>
        <Grid x:Name="grdContent" Grid.Row="2" HorizontalAlignment="Stretch" Grid.Column="2"  VerticalAlignment="Stretch">
            <Image x:Name="imgResult" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
        </Grid>
        

    </Grid>
</Page>
